def createTable(keyIn):
    # Create a two-dimensional list - five rows
    TABLE = []
    for i in range(0, WIDTH):
        TABLE.append([]) # Place five lists inside this list
        print("appending empty list")
    value = LETTER_A # ascii values of letters as we loop
    for i in range(0, HEIGHT):
        for j in range(0, WIDTH):
            letter = chr(value)
            if letter == 'Q':
                value += 1
                letter = chr(value)
            TABLE[i].append(letter)
            print("CREATE TABLE APPENDED", letter, "at", "i:", i, "j:", j)
            value += 1

def printTable():
    output = "";
    for row in TABLE:
        for col in row:
            output += col + " "
            print( col )
        output += "\n"

